@using Tatil_Seyahat_Sitesi.Models.Sınıflar
@model List<blog> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

   

    </tr>
    @foreach(var x in Model) {
    <tr>
        <td>@x.id</td>
        <td>@x.baslik</td>
        <td><a href="/Admin/BlogSil/@x.id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@x.id"class="btn btn-warning">GÜNCELLE </a></td>
    </tr>
    }
    

</table>
<a href="/Admin/YeniBlog"class=" btn btn-primary">Yeni Blog</a>

