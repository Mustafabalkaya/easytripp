@using Tatil_Seyahat_Sitesi.Models.Sınıflar
@model List<blog>

@foreach(var x in Model) {
<div class="right">
    <div class="bot-left">
        <img src="@x.BlogImage"style="width:300px;height:150px" alt="" />
    </div>
    <div class="left-text">

        <h4>@x.baslik</h4>
        <span class="doller">@x.tarih.ToString("dd/MM/yyyy")</span>
        <p>@x.aciklama.Substring(0,80) </p>
        <p><a href="/blog/blogdetay/@x.id"><span class="read">Devamını oku >></span></a></p>
    </div>
</div>
}